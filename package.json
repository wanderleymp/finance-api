{
  "name": "finance-api",
  "version": "1.0.8",
  "description": "RESTful API para gerenciamento financeiro",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "kill -9 $(lsof -t -i:3000) 2>/dev/null || true && clear && nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm install && npm run test",
    "prepare": "husky install",
    "db:migrate": "node src/db/migrate.js",
    "roadmap:populate": "node scripts/populate_roadmap_full.js",
    "migrate": "node src/scripts/migrate.js",
    "docker:build": "docker build --platform linux/amd64 -t wanderleymp/finance-api:1.0.3 .",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "finance",
    "api",
    "nodejs",
    "postgresql"
  ],
  "author": "Sua Equipe",
  "license": "MIT",
  "dependencies": {
    "@types/speakeasy": "^2.0.10",
    "amqplib": "^0.10.5",
    "awilix": "^8.0.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csrf": "^3.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.4",
    "@babel/preset-env": "^7.23.4",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
