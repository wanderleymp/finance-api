{
  "name": "finance-api",
  "version": "1.0.22",
  "description": "RESTful API para gerenciamento financeiro",
  "main": "src/app.js",
  "scripts": {
    "build:ts": "tsc",
    "start": "npm run build:ts && node --expose-gc --gc-global src/server.js",
    "dev": "clear && kill -9 $(lsof -t -i:3000) || true && nodemon --expose-gc --gc-global src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:file-storage": "jest src/newArch/fileStorage/tests/file-storage.integration.spec.ts",
    "test:file-storage:watch": "jest src/newArch/fileStorage/tests/file-storage.integration.spec.ts --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm install && npm run test",
    "prepare": "husky install",
    "db:migrate": "node src/db/migrate.js",
    "roadmap:populate": "node scripts/populate_roadmap_full.js",
    "migrate": "node src/scripts/migrate.js",
    "migrate:swagger": "node scripts/migrate-swagger.js",
    "docker:build": "docker build --platform linux/amd64 -t wanderleymp/finance-api:1.0.3 .",
    "docker:build:latest": "docker build --platform linux/amd64 -t wanderleymp/finance-api:latest .",
    "docker:build:main": "docker build --platform linux/amd64 -t wanderleymp/finance-api:main .",
    "release": "node scripts/release.js",
    "deploy": "bash scripts/deploy.sh",
    "generate:module": "node scripts/generate-module.js"
  },
  "keywords": [
    "finance",
    "api",
    "nodejs",
    "postgresql"
  ],
  "author": "Sua Equipe",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@nestjs/swagger": "^11.0.3",
    "@types/minio": "^7.1.0",
    "@types/speakeasy": "^2.0.10",
    "amqplib": "^0.10.5",
    "awilix": "^8.0.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.4",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "morgan": "^1.10.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.4",
    "@babel/preset-env": "^7.23.4",
    "@nestjs/testing": "^11.0.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "reflect-metadata": "^0.2.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
