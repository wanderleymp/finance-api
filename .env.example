# Configurações do Banco de Dados
SYSTEM_DATABASE_URL=postgresql://usuario:senha@localhost:5432/finance_db
DEV_DATABASE_URL=postgresql://usuario:senha@localhost:5432/finance_dev

# Configurações de Segurança JWT
JWT_SECRET=sua_chave_secreta_muito_longa_e_complexa_aqui
JWT_EXPIRATION=4h
JWT_REFRESH_SECRET=sua_chave_de_refresh_secreta_aqui
JWT_REFRESH_EXPIRATION=7d

# Configurações do Servidor
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Configurações de E-mail
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_usuario
SMTP_PASS=sua_senha
SMTP_FROM=financeiro@suaempresa.com

# Configurações Adicionais
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Segurança
PASSWORD_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION=15

# Recursos Opcionais
ENABLE_2FA=false
PASSWORD_RESET_EXPIRATION=90

# Integrações (se aplicável)
N8N_URL=https://n8n.webhook.seudominio.com.br/webhook
N8N_API_SECRET=sua_chave_secreta_n8n
RABBITMQ_URL=amqp://usuario:senha@localhost:5672
