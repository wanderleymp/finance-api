# Configurações de Banco de Dados

# Dialeto do banco (postgres ou mssql)
DB_DIALECT=postgres

# Ambiente de execução
NODE_ENV=development

# URLs de conexão para PostgreSQL
DEV_POSTGRES_DATABASE_URL=postgresql://usuario:senha@localhost:5432/banco_desenvolvimento
SYSTEM_DATABASE_URL=postgresql://usuario:senha@servidor-producao:5432/banco_producao

# URLs de conexão para SQL Server (MSSQL)
DEV_MSSQL_DATABASE_URL=mssql://usuario:senha@localhost:1433/banco_desenvolvimento
SYSTEM_MSSQL_DATABASE_URL=mssql://usuario:senha@servidor-producao:1433/banco_producao

# Opções de migração
DISABLE_MIGRATIONS=false
